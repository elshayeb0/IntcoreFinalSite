{
  "name": "intcore-final",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "tw:watch": "tailwindcss -c config/tailwind.config.js -i src/css/style.css -o public/style.css --watch",
    "build:css": "tailwindcss -c config/tailwind.config.js -i src/css/style.css -o public/style.css --minify",
    "build": "npm run build:css && vite build",
    "preview": "vite preview"
  },

  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.0"
  }
}
